#include <bits/stdc++.h>
using namespace std;

void printNumber()
{
    int n;
    
    cout << "Enter n:";
    cin >> n;
    
    for(int i=0; i<n; i++)
    {
        for(int j= 0; j<n-i-1; j++)
        {
            cout <<" ";
        }
        for(int j= 0; j<i*2+1; j++)
        {
            cout <<"*";
        }
        for(int j= 0; j<n-i-1; j++)
        {
            cout <<" ";
        }
        cout << endl;
    }
}

int main()
{
    printNumber();
}
